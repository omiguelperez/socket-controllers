{
    "files": [
      "src/index.ts"
    ],
    "compilerOptions": {
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "removeComments": true,
      "target": "es2017",
      "module": "commonjs",
      "esModuleInterop": true,
      "lib": [
        "es2017"
      ],
      "noImplicitAny": false,
      "moduleResolution": "node",
      "sourceMap": false,
      "rootDir": "./",
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "*": [
          "node_modules/*",
          "src/types/*"
        ]
      },
      "allowJs": true
    },
    "types": [
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "./src/**/*.test.ts",
      "dist"
    ]
  }